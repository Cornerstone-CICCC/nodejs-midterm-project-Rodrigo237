---
import '../styles/global.css';
import '../styles/form.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Login';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <Header />

   <div class="form-container">
  <form id="login-form" class="form-vertical">
    <h2>Log In</h2>
    
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" placeholder="Username" required />
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" placeholder="Password" required />
    </div>

    <button type="submit" class="btn-submit">Enter</button>

    <p class="form-footer">Don't have an account yet? <a href="/signup">Register Now</a></p>
  </form>
</div>


    <Footer></Footer>

    <script>
      const form = document.getElementById('login-form') as HTMLFormElement;
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const body = {
          username: formData.get('username'),
          password: formData.get('password')
        };

        try {
          const res = await fetch('http://localhost:3700/users/login', {
            method: 'POST',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(body)
          });
          const data = await res.json();
          if (res.ok) {
            alert(data.message || 'Login OK');
            window.location.href = '/profile';
          } else {
            alert(data.message || 'Error');
          }
        } catch (err) {
          alert('No se pudo conectar al backend.');
        }
      });
    </script>
  </body>
</html>
